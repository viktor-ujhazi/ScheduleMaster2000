            <input type="text" name="email" value=""><p />
            <input type="button" name="button" value="Create" onClick="Register(this.form)">
        </form>

        <form id="scheduleForm" method="POST" style="display: none">
            Number of day(s)(1-7) <br>
            <input type="text" name="numOfDays" value=""><p />
