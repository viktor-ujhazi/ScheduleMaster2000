            <input type="text" name="title" value=""><p />
            <input type="button" name="button" value="Create" onClick="CreateSchedules(this.form)">
        </form>

        <form id="taskForm" method="POST" style="display: none">
            Content <br>
            <input type="text" name="content" value=""><p />
            Title of task: <br>
            <input type="text" name="title" value=""><p />
            <input type="button" name="button" value="Create" onClick="CreateTasks(this.form)">
        </form>

        <div class="sidenav" id="scheduleSidenav" style="display: none">
            <div class="btn-Schedule-Select">
                <input type="button" name="button" value="Schedules" onClick="TestSend('Schedule/Index', '1')">

                <input type="button" name="button" value="Tasks" onClick="TestSend('Task/Index', '1')">
